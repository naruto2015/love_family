<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49B754"
    tools:context="com.jiedu.project.lovefamily.activity.PayContentActivity">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y38"
        android:orientation="horizontal"
        android:background="#49B754"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/y28"
            android:paddingLeft="@dimen/x15"
            android:paddingTop="@dimen/x8"
            android:paddingBottom="@dimen/y8"
            android:src="@drawable/back_mark"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/x13"
            android:text="话费托收"
            />
        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y36"
            android:padding="@dimen/x9"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title_layout"
        android:id="@+id/tv_paycontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:background="#49B754"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="退订"
        android:id="@+id/cancle_pay"
        />
    </RelativeLayout>
</RelativeLayout>
