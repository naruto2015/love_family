<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <!-- android:src="#E53935"红色-->
        <!--android:src="#49B754"-->
        <!--android:visibility="gone"-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/is_read"
            android:src="#49B754"
            android:layout_marginTop="15dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/is_readed"
            android:src="#5000"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <TextView
            android:textColor="#49B754"
            android:layout_marginTop="10dp"
            android:id="@+id/msg_title"
            android:layout_toRightOf="@id/is_read"
            android:paddingLeft="5dp"
            android:text="11111"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#4000"
            android:layout_marginTop="6dp"
            android:id="@+id/msg_friend_count"
            android:text="10"
            android:gravity="center"
            android:textSize="12dp"
            android:padding="1dp"
            android:textColor="#fff"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_width="20dp"
            android:layout_height="18dp" />
        <TextView
            android:textColor="#49B754"
            android:id="@+id/msg_time"
            android:text="2016-8-3 15:30"
            android:layout_marginTop="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/msg_title"
            android:id="@+id/msg_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="11111"
            android:layout_alignLeft="@id/is_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <Button
        android:layout_width="70dp"
        android:background="#f00"
        android:id="@+id/tv_del"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:focusable="false"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="80dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="删除"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3000"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>