<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y38"
        android:orientation="horizontal"
        android:background="#49B754"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/y28"
            android:paddingLeft="@dimen/x15"
            android:paddingTop="@dimen/x8"
            android:paddingBottom="@dimen/y8"
            android:src="@drawable/back_mark"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/x13"
            android:text="话费托收"
            />
        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y36"
            android:padding="@dimen/x9"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="42%"
        app:layout_widthPercent="100%"
        app:layout_marginTopPercent="39%"
        android:visibility="gone"

        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="38%"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="65%"
        app:layout_marginLeftPercent="16%"
        android:gravity="center_vertical"
        android:background="@drawable/linearlayout"
        android:inputType="phone"
        android:paddingLeft="40dp"
        android:hint="@string/hint_username"
        />


    <EditText
        android:id="@+id/et_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="48%"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="65%"
        app:layout_marginLeftPercent="16%"
        android:paddingLeft="40dp"
        android:inputType="number"
        android:background="@drawable/linearlayout"
        android:gravity="center_vertical"
        android:hint="@string/hint_identifying"

        />

    <Button
        android:id="@+id/getCode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="22%"
        app:layout_heightPercent="4%"
        app:layout_marginTopPercent="49%"
        android:textColor="#fff"
        app:layout_marginLeftPercent="58%"
        android:text="@string/get_identifying"
        android:textSize="@dimen/x11"
        android:gravity="center"
        android:background="#49B754"

        />


    <Button
        android:id="@+id/pay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginBottomPercent="30%"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="66%"
        app:layout_marginLeftPercent="16%"
        android:gravity="center"
        android:background="#49B754"
        android:layout_alignParentBottom="true"
        android:text="支付"
        android:textColor="#fff"
        android:textSize="25sp"

        />
    <TextView
        android:id="@+id/to_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginBottomPercent="19%"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="66%"
        android:visibility="gone"
        app:layout_marginLeftPercent="18%"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#00ffffff"
        />
</android.support.percent.PercentRelativeLayout>
