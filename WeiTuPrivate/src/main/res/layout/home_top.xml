<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_line"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:background="@drawable/home_top"
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="140dp">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/jia"
                android:src="@drawable/jia"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/home_jia"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/jia"
                android:text="添加成员"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4EBE2"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>


        <RelativeLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/msg"
                android:src="@drawable/msg"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView

                android:id="@+id/home_msg"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/msg"
                android:text="消息"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4EBE2"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/img_share"
                android:src="@drawable/share"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/home_share"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/img_share"
                android:text="分享"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>



    </LinearLayout>




</RelativeLayout>