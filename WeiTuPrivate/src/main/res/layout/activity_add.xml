<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.jiedu.project.lovefamily.activity.EditActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/personalinfor"
        >
    <TextView
        android:id="@+id/title_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:gravity="center"
        android:text="@string/add_member"
        android:textColor="#fff"
        android:textSize="@dimen/x20" />

    <ImageView
        android:id="@+id/add_back"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:padding="@dimen/x13"
        android:src="@drawable/back_mark"
        android:textColor="#fff" />
        <ImageView
            android:id="@+id/add_submit"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:padding="@dimen/x10"
            android:src="@mipmap/wancheng"
            android:layout_alignParentRight="true"
            android:textColor="#fff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56"
            android:layout_centerInParent="true"
            android:src="@drawable/default_head"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#FFAF08"
            android:text="手机："/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:id="@+id/add_edit"/>
        <ImageView
            android:id="@+id/add_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/fangdajing"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#FFAF08"
            android:text="昵称："/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:id="@+id/add_name_edit"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/user_pay_layout"
        style="@style/edit_layout_style"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/pay_icon"
            style="@style/edit_icon_style"
            android:src="@drawable/pay" />

        <Button
            android:id="@+id/pay_style"
            style="@style/edit_edit_style"
            android:layout_toRightOf="@id/pay_icon"
            android:gravity="left|center_vertical"

            android:text="@string/pay_style" />

        <ImageView
            android:layout_width="@dimen/x11"
            android:layout_height="@dimen/y8"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x184"
            android:src="@drawable/down_mark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_phone_style_layout"
        style="@style/edit_layout_style"
        android:visibility="gone"
        android:layout_below="@id/user_pay_layout">

        <ImageView
            android:id="@+id/phone_icon"
            style="@style/edit_icon_style"
            android:src="@drawable/phone_style" />

        <Button
            android:id="@+id/phone_style"
            style="@style/edit_edit_style"
            android:layout_toRightOf="@id/phone_icon"
            android:gravity="left|center_vertical"
            android:text="@string/phote_style" />

        <ImageView
            android:layout_width="@dimen/x11"
            android:layout_height="@dimen/y8"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x184"
            android:src="@drawable/down_mark" />

    </RelativeLayout>


</LinearLayout>
