<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
   >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:actionBarSize"
            android:layout_weight="0"
            android:background="#FFAF08"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="@dimen/x34"
                android:layout_height="@dimen/y35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x15"
                android:src="@mipmap/yonghutubiao" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#fff"
                android:textSize="@dimen/x20" />


            <ImageView
                android:id="@+id/message_top"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/y45"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:padding="@dimen/x9"
                android:src="@mipmap/xiaoxitubiao" />

        </LinearLayout>


            <ImageView
                android:id="@+id/dingwei_iv"
                android:background="#FFF"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/dingwei" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <com.handmark.pulltorefresh.library.PullToRefreshExpandableListView
                android:id="@+id/home_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

            </com.handmark.pulltorefresh.library.PullToRefreshExpandableListView>
            <Button
                android:id="@+id/home_jia"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_save_button"
                android:text="@string/add_member"
                android:textColor="#fff"
                android:textSize="@dimen/x20"
                android:layout_margin="@dimen/y15"
                android:layout_gravity="center_horizontal|bottom"
                />

        </FrameLayout>
</LinearLayout>