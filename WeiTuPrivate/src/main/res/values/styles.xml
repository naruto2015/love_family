<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="MainTheme" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">false</item>

    </style>

    <style name="NoFrameDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <!-- 编辑界面-->
    <style name="edit_layout_style">
        <item name="android:layout_width">@dimen/x240</item>
        <item name="android:layout_height">@dimen/y45</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="edit_icon_style">
        <item name="android:layout_width">@dimen/x17</item>
        <item name="android:layout_height">@dimen/y17</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/x11</item>
        <item name="android:layout_marginRight">@dimen/x15</item>
    </style>

    <style name="edit_edit_style">
        <item name="android:layout_width">@dimen/x157</item>
        <item name="android:layout_height">@dimen/y30</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/x11</item>
        <item name="android:background">@drawable/bg_edit_edit</item>

    </style>

    <style name="line_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <style name="MyDialogTopRight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>


    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="textStyle" >
    <item name="android:textSize">20dp</item>
    <item name="android:textColor">#fff</item>
    <item name="android:layout_margin">8dp</item>
    </style>
    <style name="textStyle_huiyuan" >
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="calling_invite_txt">
        <item name="android:textSize">15.0dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="calling_bottom_txt">
        <item name="android:textSize">18.0dp</item>
    </style>

    <style name="textStyle1" >
        <item name="android:textSize">4dp</item>
        <item name="android:textColor">#FFAF08</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- 呼叫 -->
    <style name="calling_caller_txt">
        <item name="android:textSize">20.0dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="mystyle">

        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动
    </style>
    <style name="homefragment_text">
        <item name="android:gravity">center</item>

        <item name="android:textColor">#FFAF08</item>
    </style>
</resources>
